alias ga="git add -A"
gc() {
	git commit -S -m "$@"
}
alias gp="git push"
alias fmt="yarn format"
alias ..="cd .."
alias ....="cd ../.."
alias ......="cd ../../.."
psh() {
	fmt && ga && gc "$@" && gp
}
alias stop="doas systemctl stop"
alias start="doas systemctl start"
alias ls="exa"
alias la="exa -a"
alias lal="exa -al"
alias tree="exa --tree"
if [[ $XDG_SESSION_TYPE = 'wayland' ]]; then
	alias clip="wl-copy"
else
	alias clip="xclip -selection clipboard"
fi
alias 2fa="TOKEN=\$(yad --title=\"Authy\" --text=\"What code would you like to copy?\" --entry) && mambembe-cli get-token --service-name \$TOKEN | tr -dc '0-9' | clip"
